.text-center
  %h1 Register

  = show_error_message(locals[:error])

  %form.spacer{ method: "post", role: "form" }
    .form-group
      %label{ for: "username" } Username:
      .col-xs-3.centered
        %input.form-control{ id: "username", type: "text", name: "username" }
    .form-group
      %label E-mail:
      .col-xs-3.centered
        %input.form-control{ type: "email", name: "email" }
    .form-group
      %label Password:
      .col-xs-3.centered
        %input.form-control{ type: "password", name: "password" }
    .form-group
      %label Repeat Password:
      .col-xs-3.centered
        %input.form-control{ type: "password", name: "password_confirmation" }

    %button.btn.btn-default{ type: "submit" } Register
